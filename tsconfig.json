{
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "strict": true,
        "skipLibCheck": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "~/*": ["src/frontend/*"]
        },
        "types": ["vite/client"]
    }
}
